<% #determine url to submit form to
if params[:action] == 'new'
  url = client_orders_path(@order.client)
else
  url = order_path(@order)
end
%>

<%= semantic_form_for @order, :url => url do |f| %>
  <%= render 'common/errors_explanation', :object => @order %>
  <%= render 'inputs', :form => f %>

  <%= f.submit %>
 
<% end %>
